@{
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}
@{
    ViewBag.Title = "Mood - Index";
}
@section headPart{
    <style type="text/css">
        #divProductList {
            background-color: #CCC;
        }

        #ProductList {
            list-style: none;
        }

            #ProductList li, .item {
                float: left;
                width: 200px;
                line-height: 100px;
            }

        #divPageBar, footer {
            clear: both;
        }

            #divPageBar a {
                padding: 2px 4px;
                border: 1px solid #000;
                background-color: #0094ff;
                margin: 4px;
                line-height: 32px;
                color: #fff;
                cursor: pointer;
            }

                #divPageBar a:hover {
                    background-color: #044fb9;
                }
    </style>
    <script src="~/Scripts/PageBar.js" type="text/javascript"></script>
    <script src="~/Scripts/OperateMood.js"></script>
    <script type="text/javascript">
        $(function () {
            LoadData(1);
        });
    </script>
}
<div>
    <h3>Create New Mood</h3>
    <p>
        @using (Html.BeginForm("Create", "Mood"))
        {
            <textarea name="MoodContent" id="MoodContent" style="width:610px;height:100px">
            </textarea> <br />
            <input type="submit" value="Submit" />
        }
    </p>
</div>

    <div id="divProductList">
        <table id="tabContent" class="table"></table>

        <div id="divPageBar"> </div>
    </div>