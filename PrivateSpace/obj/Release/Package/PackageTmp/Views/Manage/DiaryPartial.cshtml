@model List<DiaryViewModel>
<div>
    <h3>Diary</h3>
    @if (Model.Count > 0)
    {
        <table>
            @foreach (DiaryViewModel d in Model)
            {
                <tr>
                    <td colspan="3" align="left"><a href="@(Url.Action("Detail", "Diary", new { id = d.DiaryId })) "> @d.DiaryTitle </a> </td>
                    <td align="right">@d.DiaryTime.ToString("yyyy-MM-dd")  </td>
                    <td align="right"><a href="@(Url.Action("Edit", "Diary", new { id = d.DiaryId })) ">编辑</a> <a href="#" onclick="DelDiary(@(d.DiaryId))">删除</a></td>
                </tr>
            }
            @if (Model.Count == 10)
            {
                <tr><td> <a class="btn-link btn-primary" href="@(Url.Action("Index", "Diary"))">More</a> </td></tr>
            }
        </table>
    }
    else
    {
        <h5><a href="@(Url.Action("Create","Diary"))">Create New</a> </h5>
    }
</div>
